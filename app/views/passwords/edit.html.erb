<div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">
  <%= render 'shared/profile_sidebar' %>
  
  <main class="px-8 py-8 border rounded-md lg:flex-auto my-8">
    <div>
      <h2 class="text-base font-semibold leading-7 text-gray-900">Password</h2>

      <%= form_with model: current_user, url: password_path, class:'mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6' do |f| %>
        
        <div class="sm:col-span-3">
          <%= f.label :password, class:'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.password_field :password, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
        </div>

        <div class="col-span-full">
          <%= f.submit "Save", class:"cursor-pointer mt-2 flex items-center justify-center rounded-md border border-transparent bg-primary px-8 py-3 text-base font-medium text-white hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>
  </main>
</div>
